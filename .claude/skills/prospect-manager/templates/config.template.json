{
  "version": "1.0.0",
  "project": {
    "name": "VULCA",
    "description": "AI Art Evaluation Platform",
    "website": "https://vulcaart.art",
    "demo_link": "https://cal.com/vulcaart/demo",
    "value_props": [
      "47维度评估体系提供全面AI模型对比",
      "覆盖42个AI模型，来自15个组织",
      "8个文化视角的跨文化分析",
      "开源平台，支持学术研究"
    ]
  },
  "search": {
    "batch_size": 10,
    "categories": ["academic", "enterprise", "gallery"],
    "default_category": "academic"
  },
  "verification": {
    "required_score": 2,
    "auto_reject_outdated": true,
    "revalidation_days": 30
  },
  "incremental": {
    "threshold": 0.7,
    "auto_prompt": true
  },
  "naming_conventions": {
    "western": {
      "format": "First [Middle] Last",
      "example": "Ahmad A. Rushdi"
    },
    "chinese": {
      "format": "Pinyin_First Pinyin_Last (中文名)",
      "example": "Jinze Bai (白金泽)"
    }
  },
  "target_roles": {
    "academic": [
      "Lab Director",
      "Research Director",
      "Professor",
      "Associate Professor",
      "Department Head",
      "Principal Investigator"
    ],
    "enterprise": [
      "CEO",
      "CTO",
      "VP of Research",
      "Head of AI",
      "Product Director",
      "Research Lead"
    ],
    "gallery": [
      "Director",
      "Chief Curator",
      "Head of Digital",
      "Digital Strategy Director",
      "Collections Director"
    ]
  },
  "search_keywords": {
    "academic": [
      "AI art research lab",
      "visual language model researcher",
      "digital humanities professor",
      "museum digital innovation",
      "computational art history",
      "AI aesthetics research"
    ],
    "enterprise": [
      "AI model evaluation",
      "art tech startup",
      "VLM product",
      "AI benchmark",
      "multimodal AI company"
    ],
    "gallery": [
      "museum digital strategy",
      "art authentication AI",
      "digital collection curator",
      "museum technology director"
    ]
  }
}
