# Production Environment Variables
# Copy this file to .env and update with your production values

# Database
DB_PASSWORD=your_secure_database_password_here

# Security
SECRET_KEY=your_very_long_and_secure_secret_key_here_at_least_32_chars

# API Configuration
API_BASE_URL=https://api.wenxinmoyun.com

# Redis (optional, for caching)
REDIS_URL=redis://redis:6379

# Email (optional, for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_here

# SSL Certificate paths (for production)
SSL_CERT_PATH=/etc/letsencrypt/live/wenxinmoyun.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/wenxinmoyun.com/privkey.pem